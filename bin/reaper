#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use Reaper\Cli\ScanCommand;

// Create and run the console application
$app = new Application('Code Reaper', '0.1.0');
$app->add(new ScanCommand());
$app->setDefaultCommand('scan');
$app->run();