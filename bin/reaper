#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Reaper\Cli\PurgeCommand;
use Reaper\Cli\ScanCommand;
use Symfony\Component\Console\Application;

// Create and run the console application
$app = new Application('Code Reaper', '0.2.0');
$app->add(new ScanCommand());
$app->add(new PurgeCommand());
$app->setDefaultCommand('scan');
$app->run();